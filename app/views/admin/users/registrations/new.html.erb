<div class="ui container grid stackable">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'ui form') do |f| %>
  <%= f.error_notification %>
  
  <div class="field">
    <%= f.input :name, autocomplete: "off", required: true, autofocus: true %>
  </div>
  
  <div class="ui three fields">
    <div class="field">
      <%= f.input :email, autocomplete: "off", required: true, autofocus: true %>
    </div>
  
    <div class="field">
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    </div>
    
    <div class="field">
      <%= f.input :password_confirmation, required: true %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cadastrar" %>
  </div>
  <% end %>
</div>

